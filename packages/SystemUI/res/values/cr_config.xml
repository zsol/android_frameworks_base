<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">

   <!--Recents FAB -->
   <!-- The min animation duration for animating the task bar in. -->
   <integer name="recents_animate_task_bar_enter_duration">225</integer>
   <!-- The animation delay for animating the first task in. This should roughly be the animation
   duration of the transition in to recents. -->
   <integer name="recents_animate_task_bar_enter_delay">275</integer>
   <!-- The min animation duration for animating the task bar out. -->
   <integer name="recents_animate_task_bar_exit_duration">125</integer>

   <!-- configurable width dimension for the app sidebar trigger area -->
   <dimen name="config_app_sidebar_trigger_width">8dip</dimen>

   <!-- On-The-Go -->
   <integer name="quick_settings_onthego_dialog_short_timeout">3000</integer>
   <integer name="quick_settings_onthego_dialog_long_timeout">6000</integer>

   <!-- Enable PA Pie relocation to either stick to a physical side or default to the right side -->
   <bool name="config_relocatePieOnRotation">true</bool>

   <!-- Enable force PA Pie centered -->
   <bool name="config_forcePieCentered">true</bool>

   <!-- Sensivity of pie gestures controlls.
        Must be minimum 1 and maximum 10 (See @EdgeServiceConstants.java).
        Default for pie is high sensivity -->
   <integer name="pie_gesture_sensivity">10</integer>

</resources>
